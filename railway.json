{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 300 --keep-alive 5 --log-level info"
  },
  "variables": {
    "PORT": {
      "description": "Port to run the application on",
      "default": "5000"
    },
    "APP_PASSWORD": {
      "description": "Login password for the application",
      "default": "choco"
    },
    "SESSION_SECRET": {
      "description": "Flask session secret key (auto-generated if empty)"
    },
    "YOUTUBE_API_KEY": {
      "description": "YouTube Data API key (optional)"
    }
  }
}
